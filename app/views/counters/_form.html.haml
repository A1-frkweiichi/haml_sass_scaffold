= form_with(model: counter) do |form|
  - if counter.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(counter.errors.count, "error")
        prohibited this counter from being saved:
      %ul
        - counter.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :count, style: "display: block"
    = form.number_field :count
  %div
    = form.submit
